# General settings
userlist_deny=NO
userlist_enable=NO
allow_writeable_chroot=YES
anonymous_enable=NO
connect_from_port_20=YES
listen=YES
listen_ipv6=NO
pam_service_name=vsftpd
syslog_enable=YES

rsa_cert_file={{ openssl_certs_path }}/{{ vsftpd_cert_file }}
rsa_private_key_file={{ openssl_keys_path }}/{{ vsftpd_key_file }}
ssl_enable=YES
ssl_tlsv1=YES
ssl_sslv2=NO
ssl_sslv3=NO

chroot_local_user=YES
secure_chroot_dir=/var/run/vsftpd/empty
force_local_data_ssl=YES
force_local_logins_ssl=YES

require_ssl_reuse=NO
ssl_ciphers=HIGH

local_enable=YES
local_umask=022

write_enable=YES
seccomp_sandbox=NO

pasv_enable=YES
pasv_min_port=12000
pasv_max_port=12005
port_enable=YES
file_open_mode=0775

